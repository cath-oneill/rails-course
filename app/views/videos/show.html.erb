<h1><%= @video.title %></h1>

<h3>Description:<%= @video.description %></h3>

<iframe width="420" height="315" src="//www.youtube.com/embed/<%= @video.youtube_id %>" frameborder="0" allowfullscreen></iframe>

<h3>Comments:</h3>
<% @video.comments.each do |com| %>
	<span><%= com.content %></span><br>
<% end %>
<br>



<%= form_tag("/videos/#{@video.id}/comments", method: "post") do %>  
  <%= text_field_tag('comment[content]') %>
  <%= submit_tag("Add Comment") %>  
<% end %> 

<div id="editForm" class="hide">
	<%= form_tag("/videos/#{params[:id]}", method: "post") do %> 
	  <!-- This is needed because the browser does not support PUT in a form -->
	  <!-- However, if Rails sees this input, it will treat it as a PUT request -->
	  <!-- (this is normally generated by the built-in form_tag helper method) -->
	  <%= hidden_field_tag '_method', 'put' %> 

	  <%= label_tag('video[title]', "Title:") %>  
	  <%= text_field_tag('video[title]') %><br>  

	  <%= label_tag('video[description]', "Description:") %>  
	  <%= text_field_tag('video[description]') %><br>  

	  <%= label_tag('video[youtube_id]', "YouTube ID:") %>  
	  <%= text_field_tag('video[youtube_id]') %><br>  
	  
	  <%= submit_tag("submit") %>  
	<% end %>
</div>

<div class="hide">Am I hidden?</div>


